  "lesson": {
    "title": "Present Perfect Simple & Continuous + Stative Verbs",
    "modules": [
      {
        "id": "lesson-module",
        "name": "Learn",
        "title": "Present Perfect Lessons",
        "instructions": "Master Present Perfect Simple & Continuous, ever/never, for/since, already/yet/just, Present Perfect vs Past Simple, and how to use (or avoid!) stative verbs."
      },
      {
        "id": "writing-module",
        "name": "Write",
        "title": "Writing Practice",
        "instructions": "Write about your life experiences, recent activities, duration, and states using Present Perfect correctly — no Past Simple with 'today/this week' and no continuous with stative verbs!"
      },
      {
        "id": "game-module",
        "name": "Play",
        "title": "Grammar Games",
        "instructions": "Play fun games to choose between Present Perfect Simple vs Continuous, ever/never, for/since, already/yet/just, and spot stative verb mistakes."
      },
      {
        "id": "quiz-module",
        "name": "Quiz",
        "title": "Quick Quiz",
        "instructions": "Test your knowledge with multiple choice questions about present perfect tenses. Choose the correct answer to practice quickly!"
      },
      {
        "id": "spelling-module",
        "name": "Apply",
        "title": "Present Perfect Challenge",
        "instructions": "Apply Present Perfect and stative verb rules perfectly in real-life sentences and stories."
      }
    ]
  },

