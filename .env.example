# Environment Variables Example
# Copy this file to .env and update with your actual values

# API Configuration
UNSPLASH_API_KEY=your_unsplash_api_key_here
UNSPLASH_API_BASE=https://api.unsplash.com

# Server Configuration
PORT=8001
HOST=localhost
NODE_ENV=development

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_USER_TRACKING=false
ENABLE_OFFLINE_MODE=true

# Audio Settings (defaults)
DEFAULT_MUSIC_VOLUME=30
DEFAULT_EFFECTS_VOLUME=70

# Display Settings (defaults)
DEFAULT_TEXT_SIZE=14
ENABLE_DARK_MODE_BY_DEFAULT=false
ENABLE_HIGH_CONTRAST_BY_DEFAULT=false
ENABLE_REDUCE_MOTION_BY_DEFAULT=false

# Learning Settings (defaults)
AUTO_SHOW_HINTS_BY_DEFAULT=true
ENABLE_ANIMATIONS_BY_DEFAULT=true

# Quiz Configuration
QUIZ_HINT_LIMIT=2
QUIZ_SHOW_HINT_AFTER_INCORRECT=true

# Spelling Configuration
SPELLING_ATTEMPT_THRESHOLD=2
SPELLING_MAX_HINTS=2
SPELLING_MAX_LETTER_REVEALS=1
